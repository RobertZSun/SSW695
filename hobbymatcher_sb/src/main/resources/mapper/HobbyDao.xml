<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hobbymatcher.dao.HobbyDao">
    <select id="queryHobby" resultType="com.hobbymatcher.entity.Hobby">
        SELECT *
        FROM hobby
        ORDER BY id DESC
    </select>

    <insert id="insertHobby" useGeneratedKeys="true" keyProperty="id">
        insert into hobby (name, description, category_id, plus18_only, photo_id)
        values (#{name}, #{description}, #{categoryId}, #{plus18Only}, #{photoId})
    </insert>

    <select id="findHobbyById" parameterType="map" resultType="Hobby">
        select *
        from hobby
        where id = #{id}
    </select>

    <update id="updateHobby" parameterType="com.hobbymatcher.entity.Hobby">
        update hobby
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="description != null">description=#{description},</if>
            <if test="categoryId != null">category_id=#{categoryId},</if>
            <if test="plus18Only != null">plus18_only=#{plus18Only},</if>
            <if test="photoId != null">photo_id=#{photoId},</if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteHobby">
        DELETE
        FROM hobby
        WHERE id = #{id}
    </delete>
</mapper>