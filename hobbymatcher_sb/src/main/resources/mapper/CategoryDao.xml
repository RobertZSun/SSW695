<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hobbymatcher.dao.CategoryDao">
    <select id="queryCategory" resultType="com.hobbymatcher.entity.Category">
        SELECT *
        FROM category
        ORDER BY id DESC
    </select>

    <select id="findCategoryById" parameterType="map" resultType="Category">
        select *
        from category
        where id = #{id}
    </select>

    <select id="findCategoryByName" parameterType="map" resultType="Category">
        select *
        from category
        where name = #{name}
    </select>
</mapper>